<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_dat_phong_form" model="ir.ui.view">
            <field name="name">dat_phong</field>
            <field name="model">dat_phong</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Người mượn phòng</div>
                        <group col="2">
                            <group col="2">
                                <separator string="Thông tin chung" colspan="2"/>
                                <field name="phong_id"/>
                                <field name="trang_thai"/>
                            </group>

                            <group col="2">
                                <separator string="Thông tin người mượn phòng" colspan="2"/>
                                <field name="ten_nguoi_dat"/>
                                <field name="email_nguoi_dat"/>
                                <field name="so_dien_thoai_nguoi_dat"/>
                                <field name="id_nhan_vien"/>
                            </group>
                        </group>

                        <group col="2">
                            <separator string="Thời gian mượn phòng" colspan="2"/>
                            <field name="thoi_gian_muon_du_kien"/>
                            <field name="thoi_gian_muon_thuc_te"/>
                            <field name="thoi_gian_tra_du_kien"/>
                            <field name="thoi_gian_tra_thuc_te"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dat_phong_tree" model="ir.ui.view">
            <field name="name">dat_phong</field>
            <field name="model">dat_phong</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="phong_id"/>
                    <field name="ten_nguoi_dat"/>
                    <field name="thoi_gian_muon_du_kien"/>
                    <field name="thoi_gian_muon_thuc_te"/>
                    <field name="thoi_gian_tra_du_kien"/>
                    <field name="thoi_gian_tra_thuc_te"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="dat_phong_search">
            <field name="model">dat_phong</field>
            <field name="arch" type="xml">
                <search>
                    <field name="phong_id"/>
                    <group>
                        <field name="ten_nguoi_dat"/>
                        <field name="email_nguoi_dat"/>
                        <field name="so_dien_thoai_nguoi_dat"/>
                    </group>
                    <group>
                        <field name="thoi_gian_muon_du_kien"/>
                        <field name="thoi_gian_muon_thuc_te"/>
                        <field name="thoi_gian_tra_du_kien"/>
                        <field name="thoi_gian_tra_thuc_te"/>
                        <field name="trang_thai"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_dat_phong" model="ir.actions.act_window">
            <field name="name">Danh sách người mượn phòng</field>
            <field name="res_model">dat_phong</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "dat_phong_search"/>
        </record>
    </data>
</odoo>
        
    