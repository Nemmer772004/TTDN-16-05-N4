<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_quan_ly_phong_hop_form" model="ir.ui.view">
            <field name="name">quan_ly_phong_hop</field>
            <field name="model">quan_ly_phong_hop</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Danh sách phòng họp</div>
                        <group col="4" string="Thông tin chung">
                            <field name="name" string="Tên phòng họp"/>
                            <field name="loai_phong"/>
                            <field name="suc_chua"/>
                            <field name="trang_thai"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_quan_ly_phong_hop_tree" model="ir.ui.view">
            <field name="name">quan_ly_phong_hop</field>
            <field name="model">quan_ly_phong_hop</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Tên phòng họp"/>
                    <field name="loai_phong"/>
                    <field name="suc_chua"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="quan_ly_phong_hop_search">
            <field name="model">quan_ly_phong_hop</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Tên phòng họp"/>
                    <field name="loai_phong"/>
                    <field name="suc_chua"/>
                    <field name="trang_thai"/>
                </search>
            </field>
        </record>

        <record id="action_quan_ly_phong_hop" model="ir.actions.act_window">
            <field name="name">Danh sách phòng họp, hội trường</field>
            <field name="res_model">quan_ly_phong_hop</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref = "quan_ly_phong_hop_search"/>
        </record>
    </data>
</odoo>
        
    