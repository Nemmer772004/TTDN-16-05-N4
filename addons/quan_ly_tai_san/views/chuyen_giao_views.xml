<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View Chuyển giao -->
    <record id="view_chuyen_giao_form" model="ir.ui.view">
        <field name="name">chuyen_giao_tai_san.form</field>
        <field name="model">chuyen_giao_tai_san</field>
        <field name="arch" type="xml">
            <form string="Chuyển giao tài sản">
                <header>
                    <button name="action_duyet" string="Phê duyệt" type="object" 
                            class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_tu_choi" string="Từ chối" type="object" 
                            class="btn-danger" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_bat_dau_chuyen" string="Bắt đầu chuyển" type="object" 
                            class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'da_duyet')]}"/>
                    <button name="action_hoan_thanh" string="Hoàn thành" type="object" 
                            class="btn-success" attrs="{'invisible': [('trang_thai', '!=', 'dang_chuyen')]}"/>
                    <field name="trang_thai" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tai_san_id" options="{'no_create': True}"/>
                            <field name="ma_tai_san" readonly="1"/>
                            <field name="loai_chuyen_giao"/>
                        </group>
                        <group>
                            <field name="ngay_chuyen_giao"/>
                            <field name="ngay_giao_hang" readonly="1"/>
                            <field name="trang_thai"/>
                        </group>
                    </group>
                    
                    <group string="Thông tin chuyển giao">
                        <group string="Từ (Nguồn)">
                            <field name="tu_phong_ban_id" attrs="{'invisible': [('loai_chuyen_giao', '!=', 'phong_ban')]}"/>
                            <field name="tu_nguoi_dung_id" attrs="{'invisible': [('loai_chuyen_giao', '!=', 'nguoi_dung')]}"/>
                            <field name="tu_phong_hop_id" attrs="{'invisible': [('loai_chuyen_giao', '!=', 'vi_tri')]}"/>
                        </group>
                        <group string="Đến (Đích)">
                            <field name="den_phong_ban_id" attrs="{'invisible': [('loai_chuyen_giao', '!=', 'phong_ban')]}"/>
                            <field name="den_nguoi_dung_id" attrs="{'invisible': [('loai_chuyen_giao', '!=', 'nguoi_dung')]}"/>
                            <field name="den_phong_hop_id" attrs="{'invisible': [('loai_chuyen_giao', '!=', 'vi_tri')]}"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="ly_do" placeholder="Lý do chuyển giao..."/>
                    </group>
                    
                    <group string="Thông tin phê duyệt" attrs="{'invisible': [('trang_thai', '=', 'cho_duyet')]}">
                        <group>
                            <field name="nguoi_de_xuat_id" readonly="1"/>
                            <field name="nguoi_duyet_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="ngay_duyet" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="file_dinh_kem" filename="ten_file"/>
                        <field name="ten_file" invisible="1"/>
                        <field name="ghi_chu" placeholder="Ghi chú thêm..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View Chuyển giao -->
    <record id="view_chuyen_giao_tree" model="ir.ui.view">
        <field name="name">chuyen_giao_tai_san.tree</field>
        <field name="model">chuyen_giao_tai_san</field>
        <field name="arch" type="xml">
            <tree string="Danh sách chuyển giao">
                <field name="name"/>
                <field name="tai_san_id"/>
                <field name="loai_chuyen_giao"/>
                <field name="ngay_chuyen_giao"/>
                <field name="nguoi_de_xuat_id"/>
                <field name="trang_thai" decoration-info="trang_thai == 'cho_duyet'" 
                       decoration-primary="trang_thai == 'da_duyet'" 
                       decoration-warning="trang_thai == 'dang_chuyen'" 
                       decoration-success="trang_thai == 'hoan_thanh'" 
                       decoration-danger="trang_thai == 'tu_choi'"/>
            </tree>
        </field>
    </record>

    <!-- Calendar View Chuyển giao -->
    <record id="view_chuyen_giao_calendar" model="ir.ui.view">
        <field name="name">chuyen_giao_tai_san.calendar</field>
        <field name="model">chuyen_giao_tai_san</field>
        <field name="arch" type="xml">
            <calendar string="Lịch chuyển giao" date_start="ngay_chuyen_giao" color="trang_thai">
                <field name="tai_san_id"/>
                <field name="loai_chuyen_giao"/>
            </calendar>
        </field>
    </record>

    <!-- Search View Chuyển giao -->
    <record id="view_chuyen_giao_search" model="ir.ui.view">
        <field name="name">chuyen_giao_tai_san.search</field>
        <field name="model">chuyen_giao_tai_san</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm chuyển giao">
                <field name="name"/>
                <field name="tai_san_id"/>
                <field name="nguoi_de_xuat_id"/>
                <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai', '=', 'da_duyet')]"/>
                <filter string="Đang chuyển" name="dang_chuyen" domain="[('trang_thai', '=', 'dang_chuyen')]"/>
                <filter string="Hoàn thành" name="hoan_thanh" domain="[('trang_thai', '=', 'hoan_thanh')]"/>
                <filter string="Từ chối" name="tu_choi" domain="[('trang_thai', '=', 'tu_choi')]"/>
                <separator/>
                <filter string="Của tôi" name="cua_toi" domain="[('nguoi_de_xuat_id', '=', uid)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Tài sản" name="group_tai_san" context="{'group_by':'tai_san_id'}"/>
                    <filter string="Loại chuyển giao" name="group_loai" context="{'group_by':'loai_chuyen_giao'}"/>
                    <filter string="Trạng thái" name="group_trang_thai" context="{'group_by':'trang_thai'}"/>
                    <filter string="Người đề xuất" name="group_nguoi" context="{'group_by':'nguoi_de_xuat_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Chuyển giao -->
    <record id="action_chuyen_giao" model="ir.actions.act_window">
        <field name="name">Chuyển giao tài sản</field>
        <field name="res_model">chuyen_giao_tai_san</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{'search_default_cho_duyet': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo phiếu chuyển giao mới
            </p>
            <p>
                Quản lý việc chuyển giao tài sản giữa các phòng ban, nhân viên hoặc vị trí.
            </p>
        </field>
    </record>
</odoo>
