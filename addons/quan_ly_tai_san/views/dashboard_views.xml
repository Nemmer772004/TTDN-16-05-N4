<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_dashboard_tai_san" model="ir.actions.client">
        <field name="name">Dashboard Tài sản</field>
        <field name="tag">dashboard_tai_san</field>
    </record>

    <!-- Menu Dashboard -->
    <menuitem 
        id="menu_dashboard_tai_san"
        name="Dashboard"
        parent="menu_quan_ly_tai_san_root"
        action="action_dashboard_tai_san"
        sequence="1"/>

    <!-- View Form Dashboard (để hiển thị thống kê) -->
    <record id="view_dashboard_tai_san_form" model="ir.ui.view">
        <field name="name">dashboard.tai_san.form</field>
        <field name="model">dashboard.tai_san</field>
        <field name="arch" type="xml">
            <form string="Dashboard Tài sản">
                <sheet>
                    <div class="oe_title">
                        <h1>Dashboard Quản lý Tài sản</h1>
                    </div>
                    <group>
                        <group string="Tổng quan">
                            <field name="id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Report Khấu hao -->
    <record id="action_bao_cao_khau_hao" model="ir.actions.act_window">
        <field name="name">Báo cáo Khấu hao</field>
        <field name="res_model">khau_hao.tai_san</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có dữ liệu khấu hao
            </p>
        </field>
    </record>

    <menuitem 
        id="menu_bao_cao_khau_hao"
        name="Báo cáo Khấu hao"
        parent="menu_quan_ly_tai_san_root"
        action="action_bao_cao_khau_hao"
        sequence="50"/>

    <!-- Graph View cho Khấu hao -->
    <record id="view_khau_hao_graph" model="ir.ui.view">
        <field name="name">khau_hao.tai_san.graph</field>
        <field name="model">khau_hao.tai_san</field>
        <field name="arch" type="xml">
            <graph string="Biểu đồ Khấu hao" type="line">
                <field name="thang_nam"/>
                <field name="gia_tri_khau_hao" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View cho Khấu hao -->
    <record id="view_khau_hao_pivot" model="ir.ui.view">
        <field name="name">khau_hao.tai_san.pivot</field>
        <field name="model">khau_hao.tai_san</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích Khấu hao">
                <field name="thang_nam" type="row"/>
                <field name="tai_san_id" type="row"/>
                <field name="gia_tri_khau_hao" type="measure"/>
                <field name="gia_tri_con_lai" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Tree View cho Khấu hao -->
    <record id="view_khau_hao_tree" model="ir.ui.view">
        <field name="name">khau_hao.tai_san.tree</field>
        <field name="model">khau_hao.tai_san</field>
        <field name="arch" type="xml">
            <tree string="Lịch sử Khấu hao" create="false" delete="false">
                <field name="tai_san_id"/>
                <field name="ma_tai_san"/>
                <field name="thang_nam"/>
                <field name="nam_thu"/>
                <field name="gia_tri_khau_hao" sum="Tổng khấu hao"/>
                <field name="gia_tri_luy_ke" sum="Tổng lũy kế"/>
                <field name="gia_tri_con_lai"/>
                <field name="phuong_phap"/>
                <field name="ghi_chu"/>
            </tree>
        </field>
    </record>

    <!-- Search View cho Khấu hao -->
    <record id="view_khau_hao_search" model="ir.ui.view">
        <field name="name">khau_hao.tai_san.search</field>
        <field name="model">khau_hao.tai_san</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Khấu hao">
                <field name="tai_san_id"/>
                <field name="ma_tai_san"/>
                <field name="thang_nam"/>
                <filter string="Năm nay" name="nam_nay" 
                    domain="[('thang_nam', '&gt;=', (context_today() - relativedelta(months=12)).strftime('%Y-%m-01'))]"/>
                <filter string="Năm trước" name="nam_truoc" 
                    domain="[('thang_nam', '&gt;=', (context_today() - relativedelta(months=24)).strftime('%Y-%m-01')),
                            ('thang_nam', '&lt;', (context_today() - relativedelta(months=12)).strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Tài sản" name="group_tai_san" context="{'group_by': 'tai_san_id'}"/>
                    <filter string="Tháng" name="group_thang" context="{'group_by': 'thang_nam'}"/>
                    <filter string="Phương pháp" name="group_phuong_phap" context="{'group_by': 'phuong_phap'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Xem Dashboard theo loại -->
    <record id="action_tai_san_theo_loai" model="ir.actions.act_window">
        <field name="name">Tài sản theo Loại</field>
        <field name="res_model">tai_san</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_group_by_loai': 1}</field>
    </record>

    <!-- Action Tài sản cần Bảo trì -->
    <record id="action_tai_san_can_bao_tri" model="ir.actions.act_window">
        <field name="name">Tài sản cần Bảo trì</field>
        <field name="res_model">tai_san</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('tinh_trang', 'in', ['can_bao_tri', 'hong'])]</field>
        <field name="context">{}</field>
    </record>

    <!-- Action Tài sản sắp hết khấu hao -->
    <record id="action_tai_san_sap_het_khau_hao" model="ir.actions.act_window">
        <field name="name">Tài sản sắp hết Khấu hao</field>
        <field name="res_model">tai_san</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('ty_le_khau_hao_hoan_thanh', '&gt;=', 90)]</field>
        <field name="context">{}</field>
    </record>

</odoo>
