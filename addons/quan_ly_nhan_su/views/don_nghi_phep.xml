<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_don_nghi_phep_tree" model="ir.ui.view">
        <field name="name">don_nghi_phep.tree</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <tree string="Danh sách đơn nghỉ phép" 
                  decoration-info="trang_thai=='nhap'" 
                  decoration-warning="trang_thai=='cho_duyet'" 
                  decoration-success="trang_thai=='da_duyet'"
                  decoration-danger="trang_thai=='tu_choi'"
                  decoration-muted="trang_thai=='huy'">
                <field name="ma_don"/>
                <field name="nhan_vien_id"/>
                <field name="ma_dinh_danh"/>
                <field name="don_vi_id"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
                <field name="so_ngay_nghi"/>
                <field name="loai_nghi_phep"/>
                <field name="trang_thai" widget="badge" 
                       decoration-info="trang_thai=='nhap'"
                       decoration-warning="trang_thai=='cho_duyet'"
                       decoration-success="trang_thai=='da_duyet'"
                       decoration-danger="trang_thai=='tu_choi'"/>
                <field name="nguoi_duyet_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_don_nghi_phep_form" model="ir.ui.view">
        <field name="name">don_nghi_phep.form</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <form string="Đơn nghỉ phép">
                <header>
                    <button name="action_gui_duyet" string="Gửi phê duyệt" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                    <button name="action_phe_duyet" string="Phê duyệt" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_tu_choi" string="Từ chối" type="object" 
                            class="btn-danger" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                    <button name="action_quay_lai_nhap" string="Quay lại nháp" type="object" 
                            attrs="{'invisible': [('trang_thai', 'not in', ['cho_duyet', 'tu_choi'])]}"/>
                    <button name="action_huy" string="Hủy đơn" type="object" 
                            class="btn-secondary" attrs="{'invisible': [('trang_thai', 'not in', ['nhap', 'cho_duyet'])]}"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="nhap,cho_duyet,da_duyet"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ma_don" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Thông tin nhân viên">
                            <field name="nhan_vien_id" options="{'no_create': True}" 
                                   attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="ma_dinh_danh"/>
                            <field name="don_vi_id"/>
                        </group>
                        <group string="Thông tin đơn">
                            <field name="ngay_tao" readonly="1"/>
                            <field name="nguoi_tao_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Thời gian nghỉ">
                            <field name="ngay_bat_dau" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="ngay_ket_thuc" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="nghi_ca" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="so_ngay_nghi"/>
                        </group>
                        <group string="Loại nghỉ phép">
                            <field name="loai_nghi_phep" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="co_luong"/>
                            <field name="so_ngay_phep_con_lai" 
                                   attrs="{'invisible': [('loai_nghi_phep', '!=', 'phep_nam')]}"
                                   widget="float"/>
                        </group>
                    </group>
                    
                    <group string="Lý do và file đính kèm">
                        <field name="ly_do" nolabel="1" placeholder="Nhập lý do nghỉ phép..." 
                               attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                        <field name="file_dinh_kem" filename="ten_file" 
                               attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                        <field name="ten_file" invisible="1"/>
                    </group>
                    
                    <group string="Người thay thế">
                        <field name="nguoi_thay_the_id" options="{'no_create': True}" 
                               attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                        <field name="ghi_chu_cong_viec" nolabel="1" 
                               placeholder="Ghi chú bàn giao công việc cho người thay thế..." 
                               attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                    </group>
                    
                    <group string="Phê duyệt" attrs="{'invisible': [('trang_thai', 'in', ['nhap', 'huy'])]}">
                        <field name="nguoi_duyet_id"/>
                        <field name="ngay_duyet"/>
                        <field name="ly_do_tu_choi" 
                               attrs="{'invisible': [('trang_thai', '!=', 'tu_choi')]}"
                               nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Form View for Tu Choi -->
    <record id="view_don_nghi_phep_tu_choi_form" model="ir.ui.view">
        <field name="name">don_nghi_phep.tu_choi.form</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <form string="Lý do từ chối">
                <group>
                    <field name="ly_do_tu_choi" nolabel="1" placeholder="Nhập lý do từ chối đơn nghỉ phép..."/>
                </group>
                <footer>
                    <button name="action_confirm_tu_choi" string="Xác nhận từ chối" type="object" class="btn-danger"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_don_nghi_phep_search" model="ir.ui.view">
        <field name="name">don_nghi_phep.search</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm đơn nghỉ phép">
                <field name="ma_don"/>
                <field name="nhan_vien_id"/>
                <field name="ma_dinh_danh"/>
                <field name="don_vi_id"/>
                <field name="loai_nghi_phep"/>
                <filter string="Đơn của tôi" name="my_leaves" 
                        domain="[('nguoi_tao_id', '=', uid)]"/>
                <filter string="Tháng này" name="this_month" 
                        domain="[('ngay_bat_dau', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Nháp" name="nhap" domain="[('trang_thai', '=', 'nhap')]"/>
                <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai', '=', 'da_duyet')]"/>
                <filter string="Từ chối" name="tu_choi" domain="[('trang_thai', '=', 'tu_choi')]"/>
                <separator/>
                <filter string="Phép năm" name="phep_nam" domain="[('loai_nghi_phep', '=', 'phep_nam')]"/>
                <filter string="Ốm đau" name="om" domain="[('loai_nghi_phep', '=', 'om')]"/>
                <group expand="0" string="Group By">
                    <filter string="Nhân viên" name="group_nhan_vien" context="{'group_by': 'nhan_vien_id'}"/>
                    <filter string="Phòng ban" name="group_phong_ban" context="{'group_by': 'don_vi_id'}"/>
                    <filter string="Loại nghỉ phép" name="group_loai" context="{'group_by': 'loai_nghi_phep'}"/>
                    <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                    <filter string="Tháng" name="group_thang" context="{'group_by': 'ngay_bat_dau:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_don_nghi_phep_calendar" model="ir.ui.view">
        <field name="name">don_nghi_phep.calendar</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <calendar string="Lịch nghỉ phép" date_start="ngay_bat_dau" date_stop="ngay_ket_thuc" 
                      color="trang_thai" mode="month">
                <field name="nhan_vien_id"/>
                <field name="loai_nghi_phep"/>
                <field name="so_ngay_nghi"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_don_nghi_phep_pivot" model="ir.ui.view">
        <field name="name">don_nghi_phep.pivot</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích nghỉ phép">
                <field name="don_vi_id" type="row"/>
                <field name="loai_nghi_phep" type="row"/>
                <field name="ngay_bat_dau" interval="month" type="col"/>
                <field name="so_ngay_nghi" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_don_nghi_phep_graph" model="ir.ui.view">
        <field name="name">don_nghi_phep.graph</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <graph string="Biểu đồ nghỉ phép" type="bar">
                <field name="ngay_bat_dau" interval="month"/>
                <field name="so_ngay_nghi" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_don_nghi_phep_kanban" model="ir.ui.view">
        <field name="name">don_nghi_phep.kanban</field>
        <field name="model">don_nghi_phep</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="trang_thai">
                <field name="ma_don"/>
                <field name="nhan_vien_id"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
                <field name="so_ngay_nghi"/>
                <field name="loai_nghi_phep"/>
                <field name="trang_thai"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="ma_don"/></strong>
                                    <br/>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="nhan_vien_id"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <span><i class="fa fa-calendar"/> <field name="ngay_bat_dau"/> → <field name="ngay_ket_thuc"/></span><br/>
                                <span><i class="fa fa-clock-o"/> <field name="so_ngay_nghi"/> ngày</span><br/>
                                <span class="badge badge-pill"><field name="loai_nghi_phep"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_don_nghi_phep" model="ir.actions.act_window">
        <field name="name">Đơn nghỉ phép</field>
        <field name="res_model">don_nghi_phep</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đơn nghỉ phép mới
            </p>
            <p>
                Quản lý đơn nghỉ phép của nhân viên với workflow phê duyệt hoàn chỉnh.
            </p>
        </field>
    </record>

    <!-- Action for My Leaves -->
    <record id="action_don_nghi_phep_cua_toi" model="ir.actions.act_window">
        <field name="name">Đơn nghỉ phép của tôi</field>
        <field name="res_model">don_nghi_phep</field>
        <field name="view_mode">tree,kanban,form,calendar</field>
        <field name="context">{'search_default_my_leaves': 1}</field>
        <field name="domain">[('nguoi_tao_id', '=', uid)]</field>
    </record>

    <!-- Action for Approval -->
    <record id="action_don_nghi_phep_cho_duyet" model="ir.actions.act_window">
        <field name="name">Đơn chờ phê duyệt</field>
        <field name="res_model">don_nghi_phep</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_cho_duyet': 1}</field>
        <field name="domain">[('trang_thai', '=', 'cho_duyet')]</field>
    </record>
</odoo>
